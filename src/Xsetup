 #!/bin/sh
 # Copyright 2014 by Terahash LLC.
 # All rights reserved.

 export PATH=/bin:/usr/bin:/sbin
 export HOME=/root
 export DISPLAY=:0

 xset -dpms
 xset s off
 xhost +

 if test -x /usr/bin/nvidia-settings; then
     nvidia-settings -a GPUPowerMizerMode=1           \
                     -a GPUFanControlState=1          \
                     -a GPUTargetFanSpeed=100         \
                     -a GPUGraphicsClockOffset[3]=150
 fi

 if test -x /opt/hashstack-agent-ng/hashstack-agent-ng; then
     if test -x /opt/hashstack/server/hashstack-server; then
         start hashstack-server || restart hashstack-server
         sleep 5
     fi
     start hashstack-agent || restart hashstack-agent
 fi
 EOF
